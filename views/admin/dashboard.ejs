<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="container mt-4">
      <h1><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
      <a href="javascript:history.back()" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
      </a>
      
      <div class="row">
        <div class="col-md-4">
          <a href="/admin/users" class="btn btn-primary w-100 mb-3">
            <i class="fas fa-users me-2"></i>Quản lý người dùng
          </a>
        </div>
        <div class="col-md-4">
          <a href="/admin/classes" class="btn btn-primary w-100 mb-3">
            <i class="fas fa-chalkboard-teacher me-2"></i>Quản lý lớp học
          </a>
        </div>
        <div class="col-md-4">
          <a href="/admin/tutors" class="btn btn-primary w-100 mb-3">
            <i class="fas fa-user-graduate me-2"></i>Quản lý gia sư
          </a>
        </div>
      </div>

      <!-- Add containers for the charts -->
      <div class="row">
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thống kê người dùng</h5>
            </div>
            <div class="card-body">
              <canvas id="userChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thống kê lớp học</h5>
            </div>
            <div class="card-body">
              <canvas id="classChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thống kê gia sư</h5>
            </div>
            <div class="card-body">
              <canvas id="tutorChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Biểu đồ người dùng
      const userStats = {
        admin: "<%= userStats.admin %>",
        active: "<%= userStats.active %>",
        inactive: "<%= userStats.inactive %>",
        total: "<%= userStats.total %>",
      };
      // Biểu đồ lớp học
      const classStats = {
        available: "<%= classStats.available %>",
        occupied: "<%= classStats.occupied %>",
        total: "<%= classStats.total %>",
      };
      // Biểu đồ gia sư
      const tutorStats = {
        active: "<%= tutorStats.active %>",
        inactive: "<%= tutorStats.inactive %>",
        total: "<%= tutorStats.total %>",
      };
    </script>
    <script src="/js/admin-dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
