<div class="container mt-4">
  <h1 class="mb-4">Chat</h1>
  <div class="row">
    <!-- Cột trái: Danh sách người dùng -->
    <div class="col-md-3" style="max-height: 500px; overflow-y: auto">
      <ul class="list-group">
        <% if (users.length === 0) { %>
        <li class="list-group-item text-muted">Chưa có cuộc trò chuyện nào.</li>
        <% } else { %> <% users.forEach((user, index) => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <a
            href="#"
            class="text-decoration-none text-dark"
            onclick="selectUser('<%= user.id %>', '<%= user.display_name %>', event)"
          >
            <%= user.display_name %>
          </a>
          <% if (user.id === receiver?.id) { %>
          <span class="badge bg-primary rounded-pill">Chat</span>
          <% } %>
        </li>
        <% }) %> <% } %>
      </ul>
    </div>

    <!-- Cột phải: Ô chat -->
    <div class="col-md-9">
      <div
        id="chat-container"
        data-user-id="<%= userId %>"
        data-receiver-id="<%= receiver ? receiver.id : '' %>"
        data-receiver-name="<%= receiver ? receiver.display_name : '' %>"
      >
        <% if (!receiver) { %>
        <div class="alert alert-info" role="alert">
          Chọn một người để bắt đầu chat.
        </div>
        <% } else { %>
        <h2><span id="receiver-name"><%= receiver.display_name %></span></h2>
        <div
          id="chat-box"
          class="border rounded p-3 mb-3"
          style="height: 330px; overflow-y: auto"
        >
          <% messages.forEach(msg => { %> <% if (String(msg.sender_id) ===
          String(userId)) { %>
          <!-- Tin nhắn của người gửi (bên phải) -->
          <p class="mb-2 sender-message">
            <span
              class="chat-message bg-primary text-white p-2 rounded d-inline-block"
              style="max-width: 45%"
            >
              <%= msg.message %>
            </span>
          </p>
          <% } else { %>
          <!-- Tin nhắn của người nhận (bên trái) -->
          <p class="mb-2 receiver-message">
            <span
              class="chat-message bg-primary text-white p-2 rounded d-inline-block"
              style="max-width: 45%"
            >
              <%= msg.message %>
            </span>
          </p>
          <% } %> <% }) %>
        </div>
        <div class="input-group">
          <textarea
            id="message-input"
            class="form-control"
            placeholder="Nhập tin nhắn"
            rows="2"
            style="resize: vertical"
          ></textarea>
          <button id="send-button" class="btn btn-primary">Gửi</button>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="/css/chat.css" />
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js" defer></script>
<script src="/js/chat-detail.js" defer></script>
