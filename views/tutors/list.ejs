<h1>Danh sách gia sư</h1>
<div class="row">
  <% tutors.forEach(tutor => { %>
  <div class="col-md-4 mb-3">
    <div class="card">
      <div class="card-body">
        <!-- Kiểm tra và hiển thị ảnh gia sư -->
        <% if (tutor.photo) { %>
        <img
          src="<%= tutor.photo %>"
          class="card-img-top"
          alt="<%= tutor.full_name %>"
        />
        <% } else { %>
        <img src="../img/logo.jpg" class="card-img-top" alt="Ảnh mặc định" />
        <% } %>
        <p></p>
        <h5 class="card-title"><%= tutor.full_name %></h5>
        <p class="card-text">Môn: <%= tutor.subjects_teach %></p>
        <p class="card-text">Lớp dạy: <%= tutor.classes_teach %></p>
        <p class="card-text">
          Địa chỉ: <%= tutor.address %>, <%= tutor.district %>, <%=
          tutor.province %>
        </p>
        <a href="/tutors/<%= tutor.id %>" class="btn btn-primary"
          >Xem chi tiết</a
        >
      </div>
    </div>
  </div>
  <% }) %>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if (currentPage > 1) { %>
    <li class="page-item">
      <a class="page-link" href="/tutors?page=<%= currentPage - 1 %>"
        >Trang trước</a
      >
    </li>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
      <a class="page-link" href="/tutors?page=<%= i %>"><%= i %></a>
    </li>
    <% } %> <% if (currentPage < totalPages) { %>
    <li class="page-item">
      <a class="page-link" href="/tutors?page=<%= currentPage + 1 %>"
        >Trang sau</a
      >
    </li>
    <% } %>
  </ul>
</nav>

<a href="/contact" class="btn btn-success">Đăng ký làm gia sư</a>
