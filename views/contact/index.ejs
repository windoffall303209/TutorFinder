<!-- Tiêu đề trang -->
<h1 class="contact-heading">Liên hệ</h1>

<!-- Thông tin liên hệ -->
<div class="contact-info">
  <p>
    Email:
    <a href="mailto:trungtamgiasu@example.com">trungtamgiasu@example.com</a>
  </p>
  <p>Số điện thoại: <a href="tel:0123456789">0123-456-789</a></p>
</div>

<!-- Nút hiển thị form -->
<% if (typeof user !== 'undefined' && user) { %>
<div class="contact-actions">
  <button id="tutorRegisterBtn" class="btn btn-primary me-2">
    Đăng ký làm gia sư
  </button>
  <button id="classRegisterBtn" class="btn btn-primary">
    Đăng ký tìm gia sư
  </button>
</div>

<!-- Khu vực hiển thị form -->
<div id="registerForms" class="mt-4">
  <!-- Form đăng ký làm gia sư -->
  <div id="tutorForm" class="form-container d-none">
    <%- include('tutorregisterform') %>
  </div>

  <!-- Form đăng ký tìm gia sư -->
  <div id="classForm" class="form-container d-none">
    <%- include('classregisterform') %>
  </div>
</div>
<% } else { %>
<p>
  Vui lòng <a href="/auth/login" class="btn btn-primary">đăng nhập</a> để đăng
  ký.
</p>
<% } %>
